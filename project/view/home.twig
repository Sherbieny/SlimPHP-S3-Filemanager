
<!doctype html>
<html lang="en">
    <head>
        {# Required meta tags #}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {# Bootstrap CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        {# fontawsome #}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
        <link href="css/style.css" rel="stylesheet">

        <title>My App</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">AWS S3 Filemanager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a id="upload-file-btn" class="nav-link" href="#" data-bs-toggle="modal"
                                data-bs-target="#upload-file-modal">Upload File</a>
                        </li>
                        <li class="nav-item">
                            <a id="create-folder-btn" class="nav-link" href="#" data-bs-toggle="modal"
                                data-bs-target="#create-folder-modal">Create Folder</a>
                        </li>
                        <li class="nav-item">
                            <a id="delete-folder-btn" class="nav-link" href="#" data-bs-toggle="modal"
                                data-bs-target="#delete-folder-modal">Delete Folder</a>
                        </li>
                        <li class="nav-item">
                            <a id="save-btn" class="d-none nav-link" href="#">Save
                                <span class="d-none spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                                <span class="visually-hidden">Loading...</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid mt-3">
            <div class="row">
                <div class="position-relative col-3 border border-primary overflow-auto max-vh-75">
                    {# Folder tree #}
                    <div id="sidebar-loading-spinner" class="d-none d-flex justify-content-center align-items-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="folder-list-container">
                        {% include 'snippets/folders.twig' %}
                    </div>
                </div>
                <div class="position-relative col-9 overflow-auto max-vh-75">
                    <!-- bootstrap loading spinner - hidden -->
                    <div id="main-loading-spinner" class="d-none d-flex justify-content-center align-items-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="file-list-container" class="p-4">
                    {% include 'snippets/files.twig' %}
                </div>
                </div>
            </div>
        </div>

        {% include 'snippets/modals.html' %}
        {# Bootstrap 5.3 #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        {# Sortablejs #}
        <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
        {# Custom JS #}
        <script src="js/main.js"></script>
    </body>
</html>